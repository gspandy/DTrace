<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd          
    http://code.alibabatech.com/schema/dubbo          
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <bean id="propertyConfigurer" class="com.kaiyuan.dfb.mobilecenter.commons.util.ZookeeperPropertySupport">
        <property name="locations">
            <list>
                <value>classpath:zk.properties</value>
            </list>
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>
    <dubbo:application name="dfb-mobilecenter-api"/>
    <dubbo:registry protocol="zookeeper" address="${zk.address}" check="false"/>
    <!--<dubbo:registry protocol="multicast" address="224.5.6.7:1234" />-->
    <!-- 生成远程服务代理，可以和本地bean一样使用demoService -->
    <dubbo:consumer retries="0" filter="AuthorityFilter"/>
    <dubbo:reference id="accountService" interface="com.kaiyuan.dfb.mobilecenter.service.AccountService"/>
</beans>